<%= form_with model: @chirp, local: true do |form| %>
  <% if @chirp.errors.any? %>
    <div id='error_explanation'>
      <h2>
        <%= pluralize(@chirp.errors.count, "error") %> prohibited this chirp from being saved:
      </h2>
      <ul>
        <% @chirp.errors.full_messages.each do |msg| %>
